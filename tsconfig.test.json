{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["react", "jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/setupTests.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
